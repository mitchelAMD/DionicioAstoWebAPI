{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "IncludeScopes": false,
      "BasePath": "Logs",
      "LogLevel": {
        "Default": "Information"
      },
      "Files": [
        {
          "Path": "<appname>-<date>.log",
          //"Path": "abc.log",
          "MaxFileSize": 10000
        }
      ]
    }
  }
}
